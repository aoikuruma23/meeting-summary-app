# 基本設定
APP_NAME=議事録要約Webアプリ
DEBUG=True

# データベース設定
DATABASE_URL=sqlite:///./meeting_summary.db

# JWT設定
SECRET_KEY=meeting-summary-app-secret-key-2025-super-secure-jwt-token-key
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OpenAI設定
OPENAI_API_KEY=your-openai-api-key

# Stripe設定
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# 暗号化設定
ENCRYPTION_KEY=your-encryption-key-here

# Google OAuth設定
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LINE OAuth設定
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_REDIRECT_URI=https://your-domain.com/auth/callback

# CORS設定
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# ファイル保存設定
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600
CHUNK_DURATION=600

# 課金設定
FREE_TRIAL_DAYS=31
FREE_USAGE_LIMIT=10
MONTHLY_PRICE=980

# 通知設定
ADMIN_EMAIL=admin@your-domain.com
LINE_NOTIFY_TOKEN=your-line-notify-token-here 